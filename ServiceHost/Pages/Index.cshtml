@page
@model IndexModel
@{
    ViewData["Title"] = "صفحه اصلی";
}

@await Component.InvokeAsync("Slide")

@await Component.InvokeAsync("ProductCategory")

@await Component.InvokeAsync("ProductCategoryWithProduct")

@await Component.InvokeAsync("LatestArrivals")


<div class="banner-hover-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="banner-hover-wrapper">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="single-hover-banner">
                                <div class="single-hover-banner__image">
                                    <a href="shop-left-sidebar.html">
                                        <img src="~/Theme/assets/img/banners/img1-middle-eposi1.jpg" class="img-fluid"
                                             alt="">
                                    </a>
                                    <div class="single-hover-banner__content">
                                        <h4 class="small-text">شگفت انگیزها</h4>
                                        <h3 class="big-text">تا 50% تخفیف</h3>
                                        <a class="banner-link" href="shop-left-sidebar.html">خرید کنید</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="single-hover-banner">
                                <div class="single-hover-banner__image">
                                    <a href="shop-left-sidebar.html">
                                        <img src="~/Theme/assets/img/banners/img2-middle-eposi1.jpg" class="img-fluid"
                                             alt="">
                                    </a>
                                    <div class="single-hover-banner__content">
                                        <h4 class="small-text">پرطرفدار ترین محصولات</h4>
                                        <h3 class="big-text">با اطمینان بخرید</h3>
                                        <a class="banner-link" href="shop-left-sidebar.html">محصولات بیشتر</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="feature-logo-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="feature-logo-wrapper section-space--inner-bottom">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="single-feature-logo">
                                <div class="single-feature-logo__image">
                                    <img src="~/Theme/assets/img/icons/free_shipping.png" class="img-fluid" alt="">
                                </div>
                                <div class="single-feature-logo__content">
                                    <h4 class="title">ارسال رایگان</h4>
                                    <p class="short-desc">
                                        ارسال رایگان به سراسر ایران برای سفارش های بالای 500 هزار تومان
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="single-feature-logo">
                                <div class="single-feature-logo__image">
                                    <img src="~/Theme/assets/img/icons/money_back.png" class="img-fluid" alt="">
                                </div>
                                <div class="single-feature-logo__content">
                                    <h4 class="title">گارانتی بازگشت وجه</h4>
                                    <p class="short-desc">
                                        اگر از محصول دریافتی راضی نیستید، مبلغ پرداختی به طور کامل به شما بازگردانده خواهد شد.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="single-feature-logo">
                                <div class="single-feature-logo__image">
                                    <img src="~/Theme/assets/img/icons/support247.png" class="img-fluid" alt="">
                                </div>
                                <div class="single-feature-logo__content">
                                    <h4 class="title">پشتیبانی آنلاین 24/7</h4>
                                    <p class="short-desc">
                                        تیم پشتیبانی ما برای خدمت رسانی 24 ساعته در 7 روز هفته آماده است.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("LatestArticles")


<div class="newsletter-area section-space--inner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 offset-lg-2">
                <div class="newsletter-wrapper">
                    <p class="small-text">پیشنهادات ویژه برای مشترکان</p>
                    <h3 class="title">ده درصد تخفیف اعضا</h3>
                    <p class="short-desc">
                        عضو خبرنامه شوید تا از آخرین تخفیفات زودتر از سایرین مطلع شوید.
                    </p>

                    <div class="newsletter-form">
                        <form id="mc-form" class="mc-form">
                            <input type="email" placeholder="آدرس ایمیل خود را وارد کنید..." required>
                            <button type="submit" value="submit">عضویت</button>
                        </form>

                    </div>
                    <div class="mailchimp-alerts">
                        <div class="mailchimp-submitting"></div>
                        <div class="mailchimp-success"></div>
                        <div class="mailchimp-error"></div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
